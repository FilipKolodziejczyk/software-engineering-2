[
  {
    "name": "${var.app_name}-${var.app_environment}-backend-container",
    "image": "${var.repository_url}:latest",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "environmentFiles": [
      {
        "value": "file://../env/${var.app_environment}.env",
        "type": "s3"
      }
    ],
    "memory": 512,
    "cpu": 2
  }
]